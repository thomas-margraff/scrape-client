{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["app/core/services/*"],
      "@interceptors/*": ["app/core/http-initerceptors/*"],
      "@models/*": ["app/shared/models/*"],
      "@constants/*": ["app/core/constants/*"],
    },
    "outDir": "./out-tsc/app",
    "types": [],
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
